<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <LinearLayout android:gravity="center_horizontal" android:layout_width="fill_parent" style="?android:attr/buttonBarStyle" android:layout_height="wrap_content">
        <Button android:layout_width="wrap_content" android:layout_height="fill_parent" style="?android:attr/buttonBarButtonStyle"  android:id="@+id/your_groups"
                android:text="@string/your_groups"/>
        <Button android:layout_width="wrap_content" android:layout_height="fill_parent" style="?android:attr/buttonBarButtonStyle" android:id="@+id/search_groups"
                android:text="@string/search_groups"/>
        <Button android:layout_width="wrap_content" android:layout_height="fill_parent" style="?android:attr/buttonBarButtonStyle"  android:id="@+id/create_new"
                android:text="@string/create_new"/>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/groups_frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>